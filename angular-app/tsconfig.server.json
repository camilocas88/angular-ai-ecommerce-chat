{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2022",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "outDir": "./dist/server"
  },
  "include": [
    "src/server.ts",
    "src/ai/**/*",
    "src/api.ts",
    "src/data.ts"
  ],
  "exclude": [
    "src/app/**/*",
    "**/*.spec.ts"
  ],
  "ts-node": {
    "esm": true
  }
}
